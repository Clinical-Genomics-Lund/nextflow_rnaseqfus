singularity{
  enabled = true
  runOptions = '--bind /data/ '
}


params {
  tmp_dir = "/data/tmp"
  refbase = "/data/bnf/dev/sima/rnaSeq_fus/data"
  outdir = "/data/bnf/dev/sima/rnaSeq_fus/results"
  baseDir = "/data/bnf/dev/sima/rnaSeq_fus"
  
  genome_fasta = "${refbase}/hg_files/Homo_sapiens.GRCh38.dna.primary_assembly.fa" //fasta file from ensembl
  genome_gtf = "${refbase}/hg_files/gtf/Homo_sapiens.GRCh38.98.gtf" //fasta file from ensembl
  ref_salmon = "${refbase}/transcriptome_ref/Homo_sapiens.GRCh38.cdna.all.fa"
  
  // fastqscreen genome config file 
  genome_conf = "${refbase}/fastqScreen/FastQ_Screen_Genomes/fastq_screen.conf"

  //star_fusion_ref = "${refbase}/starFusion/ctat_genome_lib_build_dir/" #old version
  star_fusion_ref = "${refbase}/starFusion/GRCh38_gencode_v32_CTAT_lib_Dec062019.source/ctat_genome_lib_build_dir/"   
  fusionCatcher_ref= "${refbase}/fusioncatcher/human_v98/"

  //Provider files
  ref_bed = "${refbase}/provider/HPA_1000G_final_38.bed"
  ref_bedXy= "${refbase}/provider/xy_38.bed"

  //JAFFA
  jaffa_base="${refbase}/hg_files/hg38/"
  jaffa_file = "/opt/conda/envs/CMD-RNASEQFUS/share/jaffa-1.09-2/JAFFA_direct.groovy"

  //BodyCov
  ref_rseqc_bed = "${refbase}/RseQC/Homo_sapiens.GRCh38.79.bed"

  ref_genome_dir = "${refbase}/star_refGenome_index/star_ref_index/" 
  salmon_index_dir = "${refbase}/transcriptome_ref/salmon_index/"

  //salmon
  hem_classifier_salmon  = "/data/bnf/ref/fusion_classifier/hem_classifier.salmon.20190510.RData"
  ensembl_annotation = "/data/bnf/ref/fusion_classifier/ensembl_annotation.RData"
  reference_expression_all = "/data/bnf/ref/salmon/reference_expression.all.tsv"
  genesOfIntrest = "/data/bnf/ref/fuseq/genes_of_interest.tsv"

  

  // Set running tool flags 
  // QC tools
  subsampling=false
  qc = false
  star = false
  fastqscreen = false
  qualimap = false
  bodyCov = false
  provider = false
  combine = false

  // Fusion identification tools 
  fusion = false
  star_fusion = false
  fusioncatcher = true
  jaffa = false

  // Reads quantification tool 
  quant = false
  

  //Other flags 
  singleEnd= false
  coyote = false

  
  // ref preprocessing flags
  fastqscreen_getgenome = false
  star_inedx = false
  salmon_index = false

}

process { withName:star_fusion { container = "/data/bnf/dev/sima/rnaSeq_fus/container/star-fusion.v1.8.1.simg" } }


trace {
    enabled = true
    file = 'pipeline_trace.txt'
     }

